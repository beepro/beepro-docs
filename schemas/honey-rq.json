{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "properties": {
    "git": {
      "$id": "/properties/git",
      "type": "object",
      "properties": {
        "url": {
          "$id": "/properties/git/properties/url",
          "type": "string",
          "title": "Remote Git URL"
        },
        "branch": {
          "$id": "/properties/git/properties/branch",
          "type": "string",
          "title": "Remote Branch",
          "default": "master"
        }
      },
      "required": [
        "url"
      ]
    },
    "commit": {
      "$id": "/properties/commit",
      "type": "object",
      "properties": {
        "message": {
          "$id": "/properties/commit/properties/message",
          "type": "string",
          "title": "Commit message",
          "default": ""
        },
        "interval": {
          "$id": "/properties/commit/properties/interval",
          "type": "number",
          "title": "Interval minutes to change upstream",
          "default": 1,
          "exclusiveMinimum": 1
        }
      },
      "required": []
    }
  },
  "required": [
    "git",
    "commit"
  ]
}
